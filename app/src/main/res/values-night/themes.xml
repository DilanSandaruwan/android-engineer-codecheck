<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidEngineerCodeCheck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/brownish_full</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_dark</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ValueTextTheme" parent="Theme.AndroidEngineerCodeCheck">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AndroidEngineerCodeCheck.ImageViewIcon">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@color/yellow_dark</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Theme.AndroidEngineerCodeCheck.ImageViewActionIcon">
        <item name="android:tint">@color/yellow_dark</item>
    </style>
</resources>