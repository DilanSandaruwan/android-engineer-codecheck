<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidEngineerCodeCheck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brownish_full</item>
        <item name="colorPrimaryVariant">@color/brownish_full</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brownish_full</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GitHubRepoApp.NoActionBar" parent="Theme.AndroidEngineerCodeCheck">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="ValueTextTheme" parent="Theme.AndroidEngineerCodeCheck">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FloatingButtonStyle" parent="Widget.Design.FloatingActionButton">
        <!-- Customize the background color -->
        <item name="backgroundTint">@color/brownish_full</item>
        <!-- Customize the ripple color when clicked -->
        <item name="rippleColor">@color/fab_background_color</item>
        <!-- Customize the icon color -->
        <item name="tint">@color/yellow_darker</item>
    </style>

</resources>